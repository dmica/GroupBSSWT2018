<h1>Products</h1>

<%= form_tag(products_path, :method => 'get') do %>
 <%= text_field_tag :search, params[:search]%>
 <%= submit_tag "Search" %> 
<% end %>

 <% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
  <% end %>

<div class="col-md-6 col-md-offset-3">
	<table class="table">
		<thead>
			<tr>
				<th>Name</th>
				<th>Model</th>
				<th>Price</th>
				<th>Camera</th>
				<th>Dimensions</th>
				<th>Description</th>
			</tr>
		</thead>
		<tbody>
			<% @products.each do |product| %>
				<tr>
					<td><%= product.name %></td>
					<td><%= product.model %></td>
					<td><%= product.price %></td>
					<td><%= product.camera %></td>
					<td><%= product.dimensions %></td>
					<td><%= product.description %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>