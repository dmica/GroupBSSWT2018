    <%= form.label :name %>
    <%= form.text_field :name, autofocus: true, autocomplete: "text" %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, autofocus: true, autocomplete: "text"  %>
  </div>

  <div class="field">
    <%= form.label :phone %>
    <%= form.text_field :phone, autofocus: true, autocomplete: "text"  %>
  </div></br>

  <div class="field">
    <%= form.label :message %>
    <%= form.text_area :body, autofocus: true, autocomplete: "text" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
